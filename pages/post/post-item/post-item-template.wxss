.post_container {
    display: flex;
    flex-direction: column;
    margin: 16px 0 0;
    background: #fff;
    border-width: 1px 0;
    border-color: #ededed;
    border-style: solid;
    background: #fff;
}
.post_author {
    margin: 10rpx 0 20rpx 10rpx;
}
.post_author image {
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}
.post_author text {
    margin-left: 20rpx;
    margin-bottom: 5px;
    font-size: 26rpx;
    vertical-align: middle;
}
.post_title {
    font-size: 34rpx;
    font-weight: bold;
    color: #333;
    margin: 0 0 10px 10px;
}
.post_image {
    width: 100%;
    height: 340rpx;
}
.post_content {
    color: #333;
    line-height: 40rpx;
    margin: 12px 10px;
    /*text-indent: 2em;*/
}
.post_line {
    display: flex;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
    margin-bottom: 10px;
}
.post_line image {
    width: 16px;
    height: 16px;
    margin-right: 8px;
    vertical-align: middle;
}
.post_line text {
    vertical-align: middle;
    margin-right: 20px;
    color: #333;
    font-size: 26rpx;
}