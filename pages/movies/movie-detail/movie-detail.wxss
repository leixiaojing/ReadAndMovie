@import "../stars/stars.wxss";
.container {
	display:flex;
	flex-direction:column;
}
.bgimage {
	width:100%;
	height:320rpx;
	filter:blur(20px);
}
.header {
	position:absolute;
	top:0;
	left:0;
	width:100%;
	padding:40rpx 40rpx 0;
	display:flex;
	flex-direction: column;
}
.header text {
	color:#fff;
}
.movie_name {
	font-size:40rpx;
	margin-bottom: 30rpx;
}
.statistics {
	display:flex;
	flex-direction: row;
	margin-top: 60rpx;
}
.statistics text {color:#333;}
.postimage {
	position: absolute;
	top: 130rpx;
	left: 510rpx;
	width: 200rpx;
	height: 270rpx;
}
.spacedot {
	margin:0 10rpx;
}
text.red {
	color:#f21146;
	margin-right:20rpx;
}
.like {
	margin-right:30rpx;
}
.block {
	display:flex;
	flex-direction:row;
	margin:10rpx 0;
}
.detail {
	margin-top: 30rpx;
}
.flexbox {
	padding:30rpx 30rpx;
}
.flexbox text {font-size:22rpx;}
.flexbox .label {margin-right:20rpx;color:#999;}
.brline {border-bottom:1px solid #ccc;}
.briftext {margin-top: 6rpx;}
.scrollview {flex-direction:column;}
.scrollview .scroll-container {
	white-space: nowrap;
	margin-top: 20rpx;
}
.castsinfo {
	display:inline-flex;
	flex-direction:column;
	width: 170rpx;
	margin-right:50rpx;
	white-space: normal;
}
.castsinfo image {
	width:170rpx;
	height:210rpx;
	margin-bottom:10rpx;
}
.castsinfo text {
	text-align:center;
}